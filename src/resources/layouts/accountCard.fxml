<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane" prefHeight="170.0" prefWidth="183.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.AccountCard">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="186.0" prefWidth="183.0" style="-fx-padding: 10;">
         <children>
            <HBox prefHeight="40.0" prefWidth="186.0">
               <children>
                  <Label fx:id="nameLabel" text="[NAME]">
                     <font>
                        <Font name="Lucida Sans Typewriter Bold" size="12.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <ImageView fx:id="iconImage" fitHeight="57.0" fitWidth="57.0" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="emailLabel" prefHeight="38.0" prefWidth="180.0" style="-fx-padding: 10 0;" text="E-mail:">
               <font>
                  <Font name="SimSun" size="12.0" />
               </font>
            </Label>
            <Label fx:id="passwordLabel" prefHeight="32.0" prefWidth="162.0" text="Password:">
               <font>
                  <Font name="SimSun" size="12.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </children>
</AnchorPane>
