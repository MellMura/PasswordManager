<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.RegLayout">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0">
         <children>
            <Label alignment="CENTER" prefHeight="62.0" prefWidth="319.0" text="Welcome to Password Manager Alpha!" textAlignment="CENTER">
               <font>
                  <Font name="Lucida Sans Typewriter Bold" size="13.0" />
               </font>
            </Label>
            <Label alignment="CENTER" prefHeight="18.0" prefWidth="113.0" text="Create a Username:" textAlignment="CENTER">
               <font>
                  <Font name="SimSun" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="usernameField" alignment="CENTER" prefHeight="26.0" prefWidth="597.0" style="-fx-max-width: 250;" />

            <Label alignment="CENTER" prefHeight="18.0" prefWidth="113.0" text="Enter your E-mail:" textAlignment="CENTER">
               <font>
                  <Font name="SimSun" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="emailField" alignment="CENTER" prefHeight="26.0" prefWidth="597.0" style="-fx-max-width: 250;" />
            <Label alignment="CENTER" prefHeight="18.0" prefWidth="210.0" text="Create a strong Master Password:" textAlignment="CENTER">
               <font>
                  <Font name="SimSun" size="12.0" />
               </font>
            </Label>
            <PasswordField fx:id="passwordField" style="-fx-max-width: 250;" />
            <Label alignment="CENTER" prefHeight="18.0" prefWidth="130.0" text="Repeat Password:" textAlignment="CENTER">
               <font>
                  <Font name="SimSun" size="12.0" />
               </font>
            </Label>
            <PasswordField fx:id="passwordCheckField" style="-fx-max-width: 250;" />
            <HBox alignment="CENTER" prefHeight="42.0" prefWidth="600.0">
               <children>
                  <Button fx:id="createAccountButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="124.0" text="Create an account">
                     <font>
                        <Font name="SimSun" size="12.0" />
                     </font>
                  </Button>
                  <Hyperlink alignment="CENTER_RIGHT" prefHeight="34.0" prefWidth="125.0" text="Already have one?">
                     <font>
                        <Font name="SimSun" size="12.0" />
                     </font>
                  </Hyperlink>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
