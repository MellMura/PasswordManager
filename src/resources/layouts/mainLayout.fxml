<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.SubScene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ColorPicker?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainLayout">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0">
         <children>
            <StackPane>
               <children>
                  <TilePane alignment="BOTTOM_CENTER" prefHeight="355.0" prefWidth="600.0" />
                  <SubScene fx:id="formSubScene" fill="#4daba5" height="300.0" visible="false" width="580.0">
                     <root>
                        <VBox xmlns="http://javafx.com/javafx/23.0.1"
                              xmlns:fx="http://javafx.com/fxml"
                              spacing="15" alignment="TOP_CENTER" style="-fx-padding: 20;">

                           <HBox spacing="20" alignment="CENTER">
                              <TextField fx:id="nameField" promptText="Account Name" HBox.hgrow="ALWAYS" />
                              <ColorPicker fx:id="colorPicker" />
                           </HBox>

                           <Button fx:id="iconButton" text="Choose Icon" onAction="#chooseIcon" />

                           <VBox spacing="10" alignment="CENTER">
                              <TextField fx:id="emailField" promptText="Email" />
                              <TextField fx:id="passwordField" promptText="Password" />
                           </VBox>

                           <HBox spacing="10" alignment="CENTER">
                              <Button fx:id="cancelButton" text="Cancel" onAction="#closeForm" />
                              <Button fx:id="saveAccountButton" text="Save" onAction="#saveAccount" />
                           </HBox>
                        </VBox>
                     </root>
                  </SubScene>

               </children>
            </StackPane>
            <HBox alignment="CENTER_RIGHT" prefHeight="86.0" prefWidth="600.0">
               <children>
                   <Button fx:id="addAccountButton" alignment="BASELINE_CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#addAccount" prefHeight="48.0" prefWidth="52.0" style="-fx-padding: 0;" text="+" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
