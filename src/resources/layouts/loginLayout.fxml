<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LoginLayout">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0">
         <children>
            <Label alignment="CENTER" prefHeight="62.0" prefWidth="319.0" text="Welcome to Password Manager Alpha!" textAlignment="CENTER">
               <font>
                  <Font name="Lucida Sans Typewriter Bold" size="13.0" />
               </font>
            </Label>

            <Label alignment="CENTER" prefHeight="18.0" prefWidth="113.0" text="Enter your E-mail:" textAlignment="CENTER">
               <font>
                  <Font name="SimSun" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="emailField" alignment="CENTER" prefHeight="26.0" prefWidth="597.0" style="-fx-max-width: 250;" />
            <Label alignment="CENTER" prefHeight="18.0" prefWidth="210.0" text="Enter your password:" textAlignment="CENTER">
               <font>
                  <Font name="SimSun" size="12.0" />
               </font>
            </Label>
            <PasswordField fx:id="passwordField" style="-fx-max-width: 250;" />
            <HBox alignment="CENTER" prefHeight="42.0" prefWidth="434.0">
               <children>
                  <Button fx:id="loginButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="95.0" text="Log in" defaultButton="true">
                     <font>
                        <Font name="SimSun" size="12.0" />
                     </font>
                  </Button>
                  <Hyperlink fx:id="switchToRegLink" alignment="CENTER_RIGHT" onAction="#switchToReg" prefHeight="34.0" prefWidth="154.0" text="Don't have an account?">
                  <font>
                        <Font name="SimSun" size="12.0" />
                     </font>
                  </Hyperlink>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
