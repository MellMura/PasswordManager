<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="cardWrapper" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.FolderCard">
   <AnchorPane fx:id="rootPane" prefHeight="280.0" prefWidth="280.0">
      <children>
         <VBox alignment="TOP_CENTER" prefHeight="280.0" prefWidth="280.0">
            <children>
               <HBox alignment="BOTTOM_CENTER" prefHeight="119.0" prefWidth="280.0">
                  <children>
                     <VBox fx:id="topPassword" alignment="BOTTOM_CENTER" prefHeight="80.0" prefWidth="246.0" />
                  </children>
               </HBox>
               <VBox fx:id="folderBackground" prefHeight="200.0" prefWidth="100.0">
                  <children>
                     <Label fx:id="nameLabel" prefHeight="42.0" prefWidth="280.0" text="[NAME]">
                        <font>
                           <Font name="System Bold" size="12.0" />
                        </font>
                     </Label>
                     <StackPane alignment="TOP_CENTER" prefHeight="156.0" prefWidth="280.0">
                        <children>
                           <ImageView fitHeight="94.0" fitWidth="93.0" pickOnBounds="true" preserveRatio="true">
                              <image>
                                 <Image url="@../icons/folder-open.png" />
                              </image>
                           </ImageView>
                        </children>
                     </StackPane>
                  </children>
               </VBox>
            </children>
         </VBox>
      </children>
   </AnchorPane>

</StackPane>
